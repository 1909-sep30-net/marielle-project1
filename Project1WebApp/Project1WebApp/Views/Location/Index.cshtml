@model IEnumerable<Project1WebApp.Models.LocationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Locations</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.BranchName)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
                @Html.ActionLink("View Order History", "OrderHistory", new { id = item.LocID }) |
                @Html.ActionLink("View Inventory", "GetInventory", new { id = item.LocID }) 
            </td>
        </tr>
}
    </tbody>
</table>
